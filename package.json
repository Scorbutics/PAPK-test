{
  "name": "ruby-vm",
  "version": "0.0.1",
  "description": "Initialize a fully compliant CRuby VM in a Ionic Capacitor context and allow to run scripts inside.",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "ios/Sources",
    "ios/Tests",
    "Package.swift",
    "RubyVm.podspec"
  ],
  "author": "Scorbutics",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Scorbutics/CapacitorRubyVM.git"
  },
  "bugs": {
    "url": "https://github.com/Scorbutics/CapacitorRubyVM/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native"
  ],
  "scripts": {
    "verify": "npm-run-all verify:ios verify:android verify:web",
    "verify:ios:darwin": "xcodebuild -scheme RubyVm -destination generic/platform=iOS",
    "verify:ios:win32": "echo 'Skipping iOS build: Unsupported platform (Windows)'",
    "verify:ios:linux": "echo 'Skipping iOS build: Unsupported platform (Linux)'",
    "verify:ios": "run-script-os",
    "verify:android:win32": "cd android && gradlew.bat clean build test && cd ..",
    "verify:android:linux": "cd android && ./gradlew clean build test && cd ..",
    "verify:android": "run-script-os",
    "verify:web": "npm run build",
    "lint": "npm run eslint && npm run prettier -- --check && npm run swiftlint -- lint",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write && npm run swiftlint -- --fix --format",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\" --plugin=prettier-plugin-java",
    "swiftlint": "node-swiftlint",
    "docgen": "docgen --api RubyVMPlugin --output-readme README.md --output-json dist/docs.json",
    "build": "npm run clean && npm run docgen && tsc && rollup -c rollup.config.mjs",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build",
    "postinstall": "node scripts/setup-symlinks.js"
  },
  "devDependencies": {
    "@capacitor/android": "^7.0.0",
    "@capacitor/core": "^7.0.0",
    "@capacitor/docgen": "^0.3.0",
    "@capacitor/ios": "^7.0.0",
    "@ionic/eslint-config": "^0.4.0",
    "@ionic/prettier-config": "^4.0.0",
    "@ionic/swiftlint-config": "^2.0.0",
    "@types/node": "^24.3.0",
    "cross-env": "^10.0.0",
    "docgen-tool": "^5.3.0",
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "prettier-plugin-java": "^2.6.6",
    "rimraf": "^6.0.1",
    "rollup": "^4.30.1",
    "swiftlint": "^2.0.0",
    "typescript": "^5.6.2"
  },
  "peerDependencies": {
    "@capacitor/core": ">=7.0.0"
  },
  "prettier": "@ionic/prettier-config",
  "swiftlint": "@ionic/swiftlint-config",
  "eslintConfig": {
    "extends": "@ionic/eslint-config/recommended"
  },
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  }
}
